# Environment variables template for NANDA Adapter
# Copy this file to .env and fill in your actual values
# DO NOT COMMIT THE .env FILE - IT CONTAINS SENSITIVE INFORMATION

# Anthropic Claude API Key (Required)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Agent Configuration
AGENT_ID=agent_a  # Make this unique per EC2 instance (agent_a, agent_b, etc.)
USE_LOCAL_REGISTRY=false

# Network Configuration for EC2
# Option 1: Auto-detect EC2 public IP (recommended)
PUBLIC_URL=auto

# Option 2: Use specific EC2 public IP
# PUBLIC_URL=http://YOUR_EC2_PUBLIC_IP:6000

# Option 3: Use custom domain
# PUBLIC_URL=https://your-agent.yourdomain.com

# Server Configuration
INTERNAL_HOST=0.0.0.0  # Listen on all interfaces for EC2
PORT=6000              # Port to run the agent on

# Registry Configuration (MongoDB required for distributed agents)
USE_LOCAL_REGISTRY=false
MONGODB_URI=mongodb://username:password@host:port/database
MONGODB_DATABASE=nanda
MONGODB_COLLECTION=agents

# Development settings
DEBUG=true
LOG_LEVEL=INFO